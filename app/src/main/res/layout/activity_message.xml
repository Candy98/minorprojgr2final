<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student.MessageActivity"
    android:orientation="vertical"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pdlg_space_1.0x"
        android:hint="Send message"
        android:gravity="center"
        android:id="@+id/etSendMessageStud"
        android:background="@drawable/shape_ed"
        ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Send"
        android:textAllCaps="false"
        android:id="@+id/btnSendMessageStud"
        android:background="@drawable/shape_btn_2"
        android:layout_margin="15dp"
        ></Button>

</LinearLayout>